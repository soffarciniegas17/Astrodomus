<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:gravity="center"
    android:background="@drawable/background_error">

    <ImageView
        android:src="@drawable/ic_key"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:layout_marginTop="14dp"
        android:textColor="@color/colorText"
        android:text="Restablecimiento de contraseña"
        android:textSize="17sp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/id_text_confirm"
        android:padding="5dp"
        android:textColor="@color/colorText"
        android:text="Inserte el código que recibió en su correo."
        android:layout_width="250dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:textSize="16dp"
            android:maxLength="1"
            android:textAlignment="center"
            android:id="@+id/id_c1_confirm"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorText"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            />


        <EditText
            android:textSize="16dp"
            android:maxLength="1"
            android:textAlignment="center"
            android:id="@+id/id_c2_confirm"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorText"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            />
        <EditText
            android:textSize="16dp"
            android:maxLength="1"
            android:textAlignment="center"
            android:id="@+id/id_c3_confirm"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorText"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            />

        <EditText
            android:textSize="16dp"
            android:maxLength="1"
            android:textAlignment="center"
            android:id="@+id/id_c4_confirm"
            android:textColor="@color/colorText"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            />



    </LinearLayout>


    <Button
        android:id="@+id/d_button_confirm"
        android:text="Continuar"
        android:background="@drawable/button_blue"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content" />


</LinearLayout>