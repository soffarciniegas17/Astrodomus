<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="357dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:gravity="center"
    >

    <LinearLayout
        android:padding="15dp"
        android:background="@drawable/base_blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">



        <ImageView
            android:id="@+id/id_image_item_perfil"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_profiles"/>



        <LinearLayout
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:id="@+id/id_user_item_perfil"
                android:text="Usuario: Tatiana "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:id="@+id/id_ambiente_item_perfil"
                android:text="Ambiente: RecepciÃ³n "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:id="@+id/id_tag_item_perfil"
                android:text="Tag: Perfil 1"
                />

        </LinearLayout>



    </LinearLayout>


</LinearLayout>