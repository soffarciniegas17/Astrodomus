<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:background="@drawable/base_blue"
    android:layout_width="300dp"
    android:layout_height="370dp">

    <ImageView
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_update"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/id_title_rest"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:text="Tatiana"
        android:textSize="17sp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:orientation="horizontal">


        <TextView
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="Reporte:Abre ambiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="Ambiente:Salon 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="Fecha: 2019-02-20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:padding="5dp"
            android:textColor="@color/white"
            android:text="Hora: 15:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:text="Detalles"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/id_text_rest"
        android:padding="5dp"
        android:textColor="@color/white"
        android:text="Se ingreso al ambiente"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/id_button_rest"
        android:text="Aceptar"
        android:textColor="@color/colorText"
        android:background="@drawable/button_white"
        android:layout_width="140dp"
        android:layout_height="wrap_content" />

</LinearLayout>