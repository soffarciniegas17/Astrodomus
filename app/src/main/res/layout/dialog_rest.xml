<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="300dp"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:background="@drawable/background_error">

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/id_image_report"
        android:src="@drawable/ic_key"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/id_title_rest"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorText"
        android:text="Restablecimiento de contraseña"
        android:textSize="17sp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/id_text_rest"
        android:padding="5dp"
        android:textColor="@color/colorText"
        android:text="Se ha enviado un correo a la dirección registrada"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/id_button_rest"
        android:text="Redimir codigo"
        android:background="@drawable/button_blue"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content" />

</LinearLayout>